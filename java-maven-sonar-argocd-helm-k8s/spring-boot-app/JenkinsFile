pipeline {
    agent any 

    // This ensures that even if you have multiple builds, they don't overlap
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                sh 'echo "Checking out code from GitHub..." '
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                // Navigating to the Spring Boot app directory
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Static Code Analysis') {
            environment {
                SONAR_URL = "http://35.94.168.111:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube-cred', variable: 'SONAR_TOKEN')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        sh """
                            mvn sonar:sonar \
                            -Dsonar.token=${SONAR_TOKEN} \
                            -Dsonar.host.url=${SONAR_URL} \
                            -Dsonar.projectKey=spring-boot-app-demo \
                            -Dsonar.projectName=spring-boot-app-demo
                        """
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "arunjaiswal53/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        // Build the Docker image
                        sh "docker build -t ${DOCKER_IMAGE} ."
                        
                        // Push to Docker Hub
                        withCredentials([usernamePassword(credentialsId: 'docker-cred', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                            sh "echo ${DOCKER_PASSWORD} | docker login -u ${DOCKER_USERNAME} --password-stdin"
                            sh "docker push ${DOCKER_IMAGE}"
                        }
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
                GIT_USER_NAME = "jaisarun53"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "jaisarun53@users.noreply.github.com"
                        git config user.name "jaisarun53"
                        
                        # Update the deployment manifest with the new build number
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        
                        git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER} [skip ci]"
                        
                        # Push changes back to GitHub so ArgoCD can sync
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                    '''
                }
            }
        }
    }
}
